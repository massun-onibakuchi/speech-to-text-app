{
  "name": "speech-to-text-v1",
  "version": "0.1.0",
  "private": true,
  "description": "v1 macOS speech-to-text app",
  "main": "out/main/index.js",
  "type": "module",
  "packageManager": "pnpm@10.29.3",
  "scripts": {
    "dev": "electron-vite dev",
    "build": "electron-vite build",
    "preview": "electron-vite preview",
    "dist": "pnpm run build && electron-builder",
    "dist:mac": "pnpm run build && electron-builder --mac dmg zip --publish never",
    "release:checklist": "cat docs/release-checklist.md",
    "release:dry-run": "bash scripts/release-dry-run.sh",
    "typecheck": "tsc --noEmit",
    "test": "vitest run",
    "test:coverage": "vitest run --coverage",
    "contract:smoke": "node scripts/provider-contract-smoke.mjs",
    "test:e2e": "pnpm run build && if command -v xvfb-run >/dev/null 2>&1; then xvfb-run -a playwright test; else playwright test; fi",
    "test:e2e:headed": "pnpm run build && if command -v xvfb-run >/dev/null 2>&1; then xvfb-run -a playwright test --headed; else playwright test --headed; fi"
  },
  "build": {
    "appId": "com.example.speechtotext",
    "productName": "SpeechToText",
    "files": [
      "out/**",
      "package.json"
    ],
    "mac": {
      "target": [
        "dmg",
        "zip"
      ],
      "hardenedRuntime": true
    }
  },
  "devDependencies": {
    "@playwright/test": "^1.58.2",
    "@types/node": "22.10.2",
    "@types/react": "18.3.12",
    "@types/react-dom": "18.3.1",
    "@vitest/coverage-v8": "2.1.8",
    "electron": "38.0.0",
    "electron-builder": "26.0.12",
    "electron-vite": "4.0.0",
    "jsdom": "24.1.3",
    "playwright": "^1.58.2",
    "typescript": "5.7.3",
    "vite": "6.0.7",
    "vitest": "2.1.8"
  },
  "dependencies": {
    "electron-store": "^11.0.2",
    "react": "18.3.1",
    "react-dom": "18.3.1",
    "valibot": "^1.2.0"
  },
  "pnpm": {
    "onlyBuiltDependencies": [
      "electron",
      "esbuild"
    ]
  }
}
